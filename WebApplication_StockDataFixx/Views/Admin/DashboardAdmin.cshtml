@model List<WebApplication_StockDataFixx.Models.Domain.UserTb>

@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-md-6">
            <div class="header-tittle" style="margin-bottom: 25px;">
                <h2>Dashboard</h2>
                <p>Welcome Admin Stock Taking</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-right ml-auto">
                <!-- Gunakan class ml-auto di sini -->
                <div class="button-header">
                    <a class="button" asp-controller="Admin" asp-action="AddUser">
                        <i class="fas fa-plus" style=""></i>
                        Add User
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row  mb-10" style="margin-top:40px;">
        <div class="col-md-12">
            <table class="display" width="100%" height="100%">
                <thead>
                    <tr style="color: darkgrey;">
                        <th>User ID</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Job ID</th>
                        <th>Plant ID</th>
                        <th>Stat</th>
                        <th>Created Date Time</th>
                        <th>Last Deleted Date Time</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Username</td>
                            <td>@user.Password</td>
                            <td>@user.JobId</td>
                            <td>@user.PlantId</td>
                            <td>@user.Stat</td>
                            <td>@user.CreatedDateTime</td>
                            <td>@user.DeletedDateTime</td>
                            <td>
                                <form asp-action="DeleteUser" asp-route-userId="@user.UserId" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn btn-link text-danger" title="Delete">
                                        <i class="fas fa-trash"></i> <!-- Ini adalah ikon tong sampah dari Font Awesome -->
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>



