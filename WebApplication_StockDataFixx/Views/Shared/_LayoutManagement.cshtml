    <script>
        function confirmLogout() {
            // Menampilkan pop-up konfirmasi
            if (window.confirm("Apakah Anda yakin ingin logout?")) {
                // Jika pengguna mengkonfirmasi logout, arahkan ke tindakan logout
                window.location.href = '@Url.Action("Logout", "Home")';
            } else {
                // Jika pengguna membatalkan logout, tidak ada yang terjadi
            }
        }
    </script>
</head>

@*baru*@
<body>
    <div class="wrapper">
        <div class="section">
            <div class="top_navbar">
                <div class="hamburger">
                    <a href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
                <div class="nav-logout">
                    <a href="javascript:void(0);" onclick="confirmLogout();">
                        <i class='bx bx-log-out nav_icon'></i>
                        <span class="nav_name">Logout</span>
                    </a>
                </div>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>

        <div class="sidebar">
            <div class="headerLogo">
                <a asp-controller="Management" asp-action="DashboardManagement">
                    <img src="/images/img/image228.svg" />
                </a>
            </div>
            <div class="profile">
                <img src="/images/img/gambarView.png">
                @using Microsoft.AspNetCore.Http;
                <h5>@CurrentUsername</h5>
                <p>M10071 (ISC-PMI)</p>
            </div>
            <ul id="nav_accordion">
                <li>
                    <a asp-area="" asp-controller="Management" asp-action="DashboardManagement">
                        <span class="icon"><i class="fas fa-th-list"></i></span>
                        <span class="item">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Management" asp-action="ReportManagement">
                        <span class="icon"><i class="fas fa-file"></i></span>
                        <span class="item">Report</span>
                    </a>
                </li>
            </ul>
            <div class="nav-bottom-brand">
                <h3>Panasonic</h3>
            </div>
        </div>
    </div>

