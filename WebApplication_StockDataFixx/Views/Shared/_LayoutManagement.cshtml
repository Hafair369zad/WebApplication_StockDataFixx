    <script>
        // Function to set active class for navigation links based on current page
        $(document).ready(function () {
            var currentPath = window.location.pathname.toLowerCase();
            var navLinks = document.getElementsByClassName("nav_link");
            for (var i = 0; i < navLinks.length; i++) {
                var link = navLinks[i].getAttribute("href").toLowerCase();
                if (currentPath.includes(link)) {
                    navLinks[i].classList.add("active");
                }
            }
            $('#hamburger').click(function () {
                // Toggle the class on the navigation bar to show/hide it
                $('.l-navbar').toggleClass('l-navbar-active');
            });
        });
    </script>
</head>
<body id="body-pd">
   <header class="header" id="header">
        <div class="hamburger-container">
            <div class="hamburger" id="hamburger">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
        </div>

        <div>
            <a href="@Url.Action("Logout", "Home")" class="nav-logout">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">Logout</span>
            </a>
        </div>  
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <div class="nav_list">
                        <div class="profile">
                        <img src="~/images/img/Frame_6.png" width="120px" height="120px">
                        <h4>@ViewBag.CurrentUser</h4>
                        <h3>@ViewData["Title"]</h3>
                        </div>
                    <a class="nav_link" asp-area="" asp-controller="Management" asp-action="DashboardManagement">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "DashboardManagement" ? "active" : "")"> Dashboard</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-controller="Management" asp-action="ReportManagement">
                        <i class='bx bxs-report nav_icon'></i>
                        <span class="nav_name @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "ReportManagement" ? "active" : "")">Report</span>
                    </a>
                
                </div>
               
            </div>
            <div class="nav-bottom-brand">
                <h3>Panasonic</h3>
            </div>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="content-container">
        <div class="height-100 bg-light">
            <div class="cont-body">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
